<!-- html needed for every page -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Tech Blog</title>
    <!-- global bootstrap link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="flex-column justify-space-around">

        <header class="display-flex p-2 bg-info">
            <h1 class="text-center">The Tech Blog</h1>
            {{#if loggedIn}}
            <h2 class="text-center">Welcome, {{username}}!</h2>
            {{/if}}
            <nav class="navbar navbar-light bg-info">
                <div class="container-fluid">
                    <a class="navbar-brand text-center m-0" href="/">Homepage</a>
                    <a class="navbar-brand text-center m-0" href="/dashboard">Dashboard</a>
                    {{!-- if logged in display logout button otherwise display login/signup button --}}
                    {{#if loggedIn}}
                    <button class="btn-no-style" id="logout">Logout</button>
                    {{else}}
                    <a class="navbar-brand text-center m-0" href="/login">Login/Signup</a>
                    {{/if}}
                </div>
            </nav>
        </header>
        {{!-- content area --}}
        <div class="row vh-100 d-flex align-items-center justify-content-center bg-secondary">
            {{{body}}}
        </div>
        <footer>

        </footer>
    </div>

    {{!-- logged in users only --}}
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
</body>

</html>