<!-- html for dashboard-->

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">post title:</label>
                <input class="form-input" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content">Content:</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark">Create</button>
            </div>
        </form>
    </div>
{{!-- If there are any posts, each post needs a delete button --}}
    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>Previous Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn delete-btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
<script src="../models/Post.js "></script>